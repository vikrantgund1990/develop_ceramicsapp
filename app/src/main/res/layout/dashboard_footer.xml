<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/ten_dp"
            android:paddingLeft="@dimen/fifteen_dp"
            android:paddingRight="@dimen/fifteen_dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tile Calculator"
                android:layout_marginRight="2dp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@drawable/rounded_edittext"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:layout_marginLeft="2dp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@drawable/rounded_edittext"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/five_dp"
            android:paddingLeft="@dimen/fifteen_dp"
            android:paddingRight="@dimen/fifteen_dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:layout_marginRight="2dp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@drawable/rounded_edittext"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Events"
                android:layout_marginLeft="2dp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@drawable/rounded_edittext"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/facebook"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/facebook_circle"
                android:layout_margin="2dp"
                />
            <ImageView
                android:id="@+id/twitter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/twitter_circle"
                android:layout_margin="2dp"
                />
            <ImageView
                android:id="@+id/google"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/google_circle"
                android:layout_margin="2dp"
                />
            <ImageView
                android:id="@+id/pintrest"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pinintrest_circle"
                android:layout_margin="2dp"
                />
            <ImageView
                android:id="@+id/linkedin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/linkedin_circle"
                android:layout_margin="2dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>